{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "compile": {
      "dependsOn": [
        "^compile"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "coverage": {
      "dependsOn": [
        "^coverage"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}