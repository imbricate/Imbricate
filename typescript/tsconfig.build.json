        "target": "es5",
        "lib": [
            "esnext"
        ],
        "outDir": "../app",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "esnext",
        "isolatedModules": true
