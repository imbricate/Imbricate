{
  "packageManager": "pnpm@10.28.1",
  "description": "Imbricate Monorepo",
  "scripts": {
    "ud": "pnpm update && pnpm dedupe",
    "test": "turbo test",
    "coverage": "turbo coverage",
    "lint": "turbo lint",
    "build": "turbo build",
    "compile": "turbo compile",
    "validate": "turbo lint && turbo compile && turbo coverage",
    "publish-dry-run:core": "pnpm --filter @imbricate/core run publish-dry-run",
    "publish-dry-run:stack-up": "pnpm --filter @imbricate/stack-up run publish-dry-run",
    "publish-dry-run:origin-file-system": "pnpm --filter @imbricate/origin-file-system run publish-dry-run"
  },
  "devDependencies": {
    "@babel/core": "catalog:",
    "@babel/preset-env": "catalog:",
    "@babel/preset-typescript": "catalog:",
    "@types/node": "catalog:",
    "@types/jest": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "babel-jest": "catalog:",
    "eslint": "catalog:",
    "jest": "catalog:",
    "ts-node": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  }
}